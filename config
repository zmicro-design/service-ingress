export SERVICE_INGRESS_NAME=ingress

export SERVICE_INGRESS_VERSION=v2

export SERVICE_INGRESS_CONFIG_DIR=${SERVICE_INGRESS_CONFIG_DIR:-$SERVICE_CONFIGS}
export SERVICE_INGRESS_DATA_DIR=${SERVICE_INGRESS_DATA_DIR:-$SERVICE_DATA}

export SERVICE_INGRESS_CONFIG_DIR_ROUTER=$SERVICE_INGRESS_CONFIG_DIR/config.yml
export SERVICE_INGRESS_SSL=$SERVICE_INGRESS_CONFIG_DIR/ssl

export SERVICE_INGRESS_DOMAIN=${SERVICE_INGRESS_DOMAIN}

export SERVICE_INGRESS_IS_LOCAL=${SERVICE_INGRESS_IS_LOCAL}

export SERVICE_INGRESS_HTTP_PORT=${SERVICE_INGRESS_HTTP_PORT}
export SERVICE_INGRESS_HTTPS_PORT=${SERVICE_INGRESS_HTTPS_PORT}

if [ ! -f $SERVICE_INGRESS_CONFIG_DIR_ROUTER ]; then
  cp $SERVICE_DIR/conf/config.example.yml $SERVICE_INGRESS_CONFIG_DIR_ROUTER
fi

if [ ! -d $SERVICE_INGRESS_SSL ]; then
  mkdir -p $SERVICE_INGRESS_SSL
fi
